extend includes/_layout

block vars
	- var bodyClass = 'page-open-article'
	- var navToggle = 'услуги'

block title
	title Open article
block content
	.line-v.line-v_1
	//begin screen
	.screen.screen_sm
		.screen__anime
		.screen__slider
			.screen__item
				video.screen__video(src='video/screen-1.mp4' loop='loop' preload='none')
				.screen__img(style='background-image: url(img/content/open-article-img.jpg)')
				.screen__container.container
					.screen__inner
						button.screen__play.screen__play_open-article.js-play(type='button')
							svg.icon(xmlns='http://www.w3.org/2000/svg', viewbox='0 0 27.32 34.44')
								defs
									style.
										.path {
											fill: none;
											stroke: #fff;
											stroke-miterlimit: 10;
											stroke-width: 3px;
											fill-rule: evenodd;
										}
								path.path(d='M24.5,17.22l-23,14.5v-29Z')
						.screen__title
							p Открытие новой клиники на Печерск!
	//end screen

	//begin open-article
	.open-article
		.open-article__row.container
			.open-article__col
				a.open-article__back.js-motion.js-scene(href='#' data-offset='-25' data-motion='motion3' data-main-delay='0.25' data-move-up='10')
					+i('arrow-left')
					| <span class="btn__hide-mobile">вернутся </span>к публикациям
				.open-article__date.js-motion.js-scene(data-offset='-25' data-motion='motion3' data-main-delay='0.5' data-move-up='10')
					p 24 октября 2016
			.open-article__col
				.open-article__p.js-motion.js-scene(data-offset='-25' data-motion='motion2' data-main-delay='0' data-move-up='25' data-speed-alpha='1.5')
