							a.start__btn(href='#')
								| узнать больше о лечении
								.start__btn-icon
	//end start

	//begin subscribe
	.subscribe
		.subscribe__rel.js-motion.js-scene(data-offset='-25' data-motion='motion3' data-main-delay='0' data-move-up='30' data-speed-line='0.25' data-move-up-speed='0.75')
			.subscribe__container.container
				.subscribe__col
					.subscribe__text.js-motion(data-motion='motion3' data-main-delay='0.75' data-speed-line='0.25')
						p Не забудьте подписаться на нашу рассылку
				.subscribe__col
					//begin form
					form.subscribe__form.form(action='#')
						.subscribe__input.form__row
							input(type='email' required placeholder='Введите ваш e-mail')
						.subscribe__btn.btn.btn_red.form__row.js-motion(data-motion='motion4' data-main-delay='1.5')
							| подписаться
							.btn__icon
							input(type='submit')
					//end form
	//end subscribe